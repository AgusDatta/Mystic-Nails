---
const { title, description, image } = Astro.props;
---

<div class="max-w-xs rounded overflow-hidden shadow-lg bg-green-100 m-4">
  <img class="w-full p-4 rounded" src={image} alt={title} />
  <div class="px-6 py-1">
      <div class="font-bold text-xl mb-2 text-black-700">{title}</div>
  </div>
  <div class="px-6 pt-4 pb-2 text-center">
      <p class="text-gray-700 text-base">{description}</p>
  </div>
</div>
